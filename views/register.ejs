<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Register</title>
    

    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Bebas+Neue&family=Open+Sans:wght@400;600&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="css/register.css">
    <link rel="stylesheet" href="css/footer.css">
    <link rel="stylesheet" href="css/styles.css">
    <meta name="viewport" content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">

</head>
<body>

     <!-- header -->
     <%-include ('partials/header.ejs') %> 
     <!-- header -->

     <main class="register">
        <div class="formulario">
        <form action="/" method="POST">
            
            <input type="text" name="name" placeholder="Nombre y apellido">
            <input type="text" name="user" placeholder="Nombre de usuario">
            <input type="email" name="email" placeholder="E-mail">
            <input type="number" name="number" placeholder="Teléfono">
            <br>
            <label for="birth_date"><h3>Fecha de nacimiento</h3></label>
            <br>
            <input type="date" name="birth_date" id="birth_date">
            <br>
            <br>
           
           
            <br>
            <input type="password" name="pass" placeholder="Elegí tu contraseña">
            <input type="password" name="pass_confirm" placeholder="Confirmá tu contraseña">
            <br>
            <br>
            <button class="boton" type="submit" value="Enviar">Enviar</button>
            <button class="boton" type="reset" value="Borrar">Borrar</button>
            <br>
            <br>
        </form>
    </div>
    </main>
        
       
    
    
        
            <script src="https://kit.fontawesome.com/41bcea2ae3.js" crossorigin="anonymous"></script>
            <script src="js/script.js"></script>
    
    </body>
    </html>